
@model IEnumerable<Team>

<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="Index" asp-route-teamid="" asp-route-teamname="" class="btn btn-outline-secondary">Home</a>

    @foreach (Team t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-teamid="@t.TeamID" asp-route-teamname="@t.TeamName"class="btn @(ViewBag.SelectedTeam == t.TeamName ? "btn-primary" : "btn-outline-secondary")">@t.TeamName</a>
    }

</div>